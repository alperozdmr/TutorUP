@using TutorUP.Helper.CustomDto
@model ForgetPassword
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    @await Component.InvokeAsync("_UILayoutHeadComponentPartial")

</head>

<body id="main-body">
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-6 offset-lg-3 col-xl-4 offset-xl-4">
                        <div class="login-brand">
                            <img src="~TutorUP/dist/assets/img/TutorUpImage.png" alt="logo" width="100" class="shadow-light rounded-circle">
                        </div>

                        <div class="card card-primary">
                            <div class="card-header"><h4>Reset Password</h4></div>

                            <div class="card-body">
                                <p class="text-muted">Please enter 6 digit code that we have send your email</p>
                                <form method="post" asp-controller="Settings" asp-action="ForgetPassword">
                                    <div class="form-group">
                                        <label for="code">6 digit code</label>
                                        <input id="code" type="number" class="form-control" asp-for="Code"  tabindex="1" required autofocus>
                                    </div>

                                    <div class="form-group">
                                        <label for="password">New Password</label>
                                        <input id="password" type="password" class="form-control pwstrength" asp-for="Password" data-indicator="pwindicator" tabindex="2" required>
                                        <div id="pwindicator" class="pwindicator">
                                            <div class="bar"></div>
                                            <div class="label"></div>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="password-confirm">Confirm Password</label>
                                        <input id="password-confirm" type="password" class="form-control" asp-for="ConfirmPassword" tabindex="2" required>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block" tabindex="4">
                                            Reset Password
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="simple-footer">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    @await Component.InvokeAsync("_UILayoutScriptComponentPartial")
</body>
</html>