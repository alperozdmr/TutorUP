@using TutorUP.Helper.CustomDto
@model AddReviewDto
@{
    ViewData["Title"] = "AddReview";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="main-content">
    <section class="section">
        <div class="section-header">
            <h1>Add a Review</h1>
        </div>

        <div class="section-body">
            <div class="row">
                <div class="col-12 col-md-8 offset-md-2">
                    <div class="card">
                        <div class="card-header">
                            <h4>Review the Lesson</h4>
                        </div>
                        <div class="card-body">

                            <!-- Ders detayları -->
                            <div class="mb-4">
                                <div class="form-group">
                                    <label class="font-weight-bold">Course Name</label>
                                    <p id="lessonName" class="mb-0">@ViewBag.v</p>
                                </div>

                                <div class="form-group">
                                    <label class="font-weight-bold">Instructor</label>
                                    <p id="instructorName" class="mb-0">@ViewBag.Instructor</p>
                                </div>
                            </div>

                            <!-- Review Form -->
                            <form id="reviewForm" asp-controller="Review" asp-action="AddReview" method="post">
                                <input type="hidden" name="lessonId" id="lessonId">
                                <input type="hidden" name="userId" id="userId">

                                <div class="form-group">
                                    <label for="rating" class="font-weight-bold">Rating</label>
                                    <select class="form-control" id="rating" asp-for="Rate" required>
                                        <option value="">Select Rating</option>
                                        <option value="10">⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️ - Perfect</option>
                                        <option value="9">⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️ - Excellent</option>
                                        <option value="8">⭐️⭐️⭐️⭐️⭐️⭐️⭐️⭐️ - Great</option>
                                        <option value="7">⭐️⭐️⭐️⭐️⭐️⭐️⭐️ - Very Good</option>
                                        <option value="6">⭐️⭐️⭐️⭐️⭐️⭐️ - Good</option>
                                        <option value="5">⭐️⭐️⭐️⭐️⭐️ - Average</option>
                                        <option value="4">⭐️⭐️⭐️⭐️ - Below Average</option>
                                        <option value="3">⭐️⭐️⭐️ - Poor</option>
                                        <option value="2">⭐️⭐️ - Very Poor</option>
                                        <option value="1">⭐️ - Terrible</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label for="comment" class="font-weight-bold">Comment</label>
                                    <textarea asp-for="Comment" class="form-control" id="comment" name="comment" rows="4" placeholder="Write your thoughts..." required></textarea>
                                </div>

                                <div id="formFeedback" class="text-danger mb-3" style="display:none;"></div>

                                <div class="text-center">
                                    <button type="submit" class="btn btn-success btn-lg" id="submitReviewBtn">
                                        Submit Review
                                    </button>
                                </div>

                                <div id="successMessage" class="mt-4"></div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

