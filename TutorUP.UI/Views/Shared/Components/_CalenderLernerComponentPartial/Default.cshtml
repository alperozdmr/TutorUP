@using Newtonsoft.Json
@using TutorUP.Helper.CustomDto
@model List<LernerBooks>
<script>
                  document.addEventListener('DOMContentLoaded', function() {
      // Model listesini JS array’e dönüştürüyoruz
      var events = @Html.Raw(
        JsonConvert.SerializeObject(
          Model.Select(b => new
          {
        title = b.CourseName,
        start = b.BookDate.ToString("yyyy-MM-ddTHH:mm:ss")
          })
        )
      );

      var calendar = new FullCalendar.Calendar(
        document.getElementById('custom-calendar'),
        {
          initialView: 'dayGridMonth',
           height: 600,
          headerToolbar: {
            left: 'prev,next today',
            center: 'title',
            right: 'dayGridMonth,timeGridWeek,timeGridDay'
          },
          events: events
        }
      );

      calendar.render();
    });

</script>