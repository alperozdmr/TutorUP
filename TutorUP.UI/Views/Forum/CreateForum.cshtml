@using TutorUP.Helper.Dto
@model ForumPostDto
@{
    ViewData["Title"] = "CreateForum";
    Layout = "~/Views/UILayout/Index.cshtml";
}



<div class="main-content">
    <section class="section">
        <div class="section-header">

            <h1>Create New Forum</h1>
            <div class="section-header-breadcrumb">
            </div>
        </div>

        <div class="section-body">
            <h2 class="section-title">Create New Forum</h2>
            <p class="section-lead">
                On this page you can create a new Forum and fill in all fields.
            </p>

            <div class="row">
                <div class="col-12">
                    <form class="card" method="post" asp-controller="Forum" asp-action="CreateForum" enctype="multipart/form-data">
                        <div class="card-header">
                            <h4>Write Your Post</h4>
                        </div>
                        <div class="card-body">
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Title</label>
                                <div class="col-sm-12 col-md-7">
                                    <input type="text" class="form-control" asp-for="Title">
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Category</label>
                                <div class="col-sm-12 col-md-7">
                                    <select class="form-control selectric" asp-for="CategoryID">
                                        @await Component.InvokeAsync("_CategotyComponentPartial");

                                    </select>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Content</label>
                                <div class="col-sm-12 col-md-7">
                                    <textarea class="form-control" asp-for="Content"></textarea>
                                </div>
                            </div>
                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3">Forum Image</label>
                                <div class="col-sm-12 col-md-7">
                                    <div id="image-preview" class="image-preview">
                                        <label for="image-upload">Resim</label>
                                        <input type="file" name="ImageFile" id="image-upload" asp-for="ImageUrl" />
                                    </div>
                                </div>
                            </div>
                           

                            <div class="form-group row mb-4">
                                <label class="col-form-label text-md-right col-12 col-md-3 col-lg-3"></label>
                                <div class="col-sm-12 col-md-7">
                                    <button class="btn btn-primary">Create Forum</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>



