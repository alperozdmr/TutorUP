@model TutorUP.Helper.CustomDto.RegisterDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>TutorUP</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/TutorUP/dist/assets/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/TutorUP/dist/assets/modules/fontawesome/css/all.min.css">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/TutorUP/dist/assets/modules/jquery-selectric/selectric.css">

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/TutorUP/dist/assets/css/style.css">
    <link rel="stylesheet" href="~/TutorUP/dist/assets/css/components.css">
    <!-- Start GA -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-94034622-3"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'UA-94034622-3');
    </script>
    <!-- /END GA -->
</head>

<body>
    <div id="app">
        <section class="section">
            <div class="container mt-5">
                <div class="row">
                    <div class="col-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-8 offset-lg-2 col-xl-8 offset-xl-2">
                        <div class="login-brand">
                            <img src="~/TutorUP/dist/assets/img/TutorUpImage.png" alt="logo" width="100" class="shadow-light rounded-circle">

                        </div>

                        <div class="card card-primary">
                            <div class="card-header"><h4>Register</h4></div>

                           
                            <div class="card-body">
                                <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
                                </div>
                                <form asp-controller="Auth" asp-action="Register" method="POST">
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label for="frist_name">First Name</label>
                                            <input id="frist_name" type="text" class="form-control"  asp-for="FirstName" autofocus>
                                        </div>
                                        <div class="form-group col-6">
                                            <label for="last_name">Last Name</label>
                                            <input id="last_name" type="text" class="form-control" asp-for="LastName">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input id="email" type="email" class="form-control"  placeholder="Register with student email" asp-for="Email">
                                        <div class="invalid-feedback">
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label for="password" class="d-block">Password</label>
                                            <input id="password" type="password" class="form-control pwstrength" data-indicator="pwindicator" asp-for="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                            <div id="pwindicator" class="pwindicator">
                                                <div class="bar"></div>
                                                <div class="label"></div>
                                            </div>
                                        </div>
                                        <div class="form-group col-6">
                                            <label for="password2" class="d-block">Password Confirmation</label>
                                            <input id="password2" type="password" class="form-control"  asp-for="ConfirmPassword">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <!-- <div class="form-divider">
                                      Select Learner or Instructor
                                    </div> -->
                                    <div class="row">
                                        <div class="form-group col-6">
                                            <label>UserName</label>
                                            <input type="text" class="form-control" asp-for="UserName">
                                        </div>
                                        <div class="form-group col-6">
                                            <label>Phone Number</label>
                                            <input type="text" class="form-control" asp-for="PhoneNumber">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="custom-control custom-checkbox">
                                            <input type="checkbox" name="agree" class="custom-control-input" id="agree">
                                            <label class="custom-control-label" for="agree">I agree with the terms and conditions</label>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">
                                            Register
                                        </button>
                                        <a class="btn btn-danger btn-block my-2" asp-controller="Auth" asp-action="GoogleLogin" asp-route-provider="Google">
                                            <i class="fab fa-google"></i> Sign Up with Google
                                        </a>
                                    </div>
                                </form>
                            </div>
                        </div>
                        @if (TempData["Message"] != null)
                        {
                            <div class="col-12 mb-4">
                                <div class="hero align-items-center bg-success text-white">
                                    <div class="hero-inner text-center">
                                        <h2>Congratulations</h2>
                                        <p class="lead">@TempData["Message"]</p>
                                        <div class="mt-4">
                                            <a href="/Auth/Login" class="btn btn-outline-white btn-lg btn-icon icon-left"><i class="fas fa-sign-in-alt"></i> Login</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                       
                        <div class="simple-footer">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <!-- General JS Scripts -->
    <script src="~/TutorUP/dist/assets/modules/jquery.min.js"></script>
    <script src="~/TutorUP/dist/assets/modules/popper.js"></script>
    <script src="~/TutorUP/dist/assets/modules/tooltip.js"></script>
    <script src="~/TutorUP/dist/assets/modules/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/TutorUP/dist/assets/modules/nicescroll/jquery.nicescroll.min.js"></script>
    <script src="~/TutorUP/dist/assets/modules/moment.min.js"></script>
    <script src="~/TutorUP/dist/assets/js/stisla.js"></script>

    <!-- JS Libraies -->
    <script src="~/TutorUP/dist/assets/modules/jquery-pwstrength/jquery.pwstrength.min.js"></script>
    <script src="~/TutorUP/dist/assets/modules/jquery-selectric/jquery.selectric.min.js"></script>

    <!-- Page Specific JS File -->
    <script src="~/TutorUP/dist/assets/js/page/auth-register.js"></script>

    <!-- Template JS File -->
    <script src="~/TutorUP/dist/assets/js/scripts.js"></script>
    <script src="~/TutorUP/dist/assets/js/custom.js"></script>
</body>
</html>
